
{
  "compilerOptions": {
    "outDir": "./module",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "typeRoots" : [
      "./node_modules/@types",
      "./lib/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "./lib/**/*"
, "@types"  ],
  "exclude": [
    "./module",
    "node_modules"
  ]
}